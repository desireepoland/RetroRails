<h3>Choose your Team </h3>

<%= form_tag team_select_path, method: :get do %> 
	<%= collection_select(:team, :id, Team.all, :id,  :name, prompt: true) %> 
	<%= submit_tag "Go to Team's Retro Board" %> 
<% end %> 

<h3>Create a New Team</h3>
<%= link_to "Add Team", new_team_path %> 

