<h1><%= @title %></h1>

<%= form_for @retro, url: { action: @action } do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name, :require => true %>
  <%= f.hidden_field :team_id, value: current_team.id %>
  <%= @retro.persisted? ?  (f.submit value: "Update Retro", id: 'special-button') : (f.submit value: "Add Retro", id: 'special-button') %>
<% end %>
